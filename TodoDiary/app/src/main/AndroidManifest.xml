<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tododiary2.ejvindh.com.tododiary">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TodoDiary"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tododiary2.ejvindh.com.tododiary.JumbleActivity"
            android:label="@string/title_activity_jumble" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tododiary2.ejvindh.com.tododiary.TodoDiary" />
        </activity>
        <activity
            android:name="tododiary2.ejvindh.com.tododiary.BrowseFiles"
            android:label="@string/title_activity_browse_files" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tododiary2.ejvindh.com.tododiary.TodoDiary" />
        </activity>
        <activity
            android:name="tododiary2.ejvindh.com.tododiary.Raw_db_Activity"
            android:label="@string/title_activity_raw_db" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tododiary2.ejvindh.com.tododiary.TodoDiary" />
        </activity>
    </application>

</manifest>
